@model BlobUploader.Html5.Web.Models.FileUploadModel
@{
    ViewBag.Title = "HTML5 Blob Upload Control";
}
<form id="form1" runat="server">
<table class="divHeader">
    <tr>
        <td>
            HTML5 Azure Blob Upload
        </td>
    </tr>
</table>
<div align="center" class="divBody">
    <br />
    <div id="controlHost">
        <div id="outerPanel">
            <table width="100%" cellpadding="2" cellspacing="5">
                <tr align="left">
                    <td colspan="2">
                        <span class="message">Please select a file to upload</span>
                    </td>
                </tr>
                <tr align="left">
                    <td valign="top">
                        <input type="file" id="FileInput" multiple="false" class="fileInput" />
                    </td>
                    <td align="right">
                        <input type="button" id="upload" name="Upload" value="Upload" onclick="startUpload('FileInput', 1048576, 'uploadProgress', 'statusMessage');return false;"
                            class="button" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <progress id="uploadProgress" style="width: 100%; height: 10px" hidden="hidden" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="left">
                        <span id="statusMessage" class="message"></span>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
</form>
